<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.n52.shared.serializable.pojos">
  <class name="Sensor" table="sesclient_sensor" >
      <id name="id" column="ID">
         <generator class="sequence">
            <param name="sequence">sensor_id_seq</param>
         </generator>
      </id>
      <property name="sensorID" type="string"/>
      <property name="activated" type="boolean"/>
      <property name="inUse" type="integer"/>
   </class>
</hibernate-mapping>