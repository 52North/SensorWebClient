<configuration scan="false">

	<!-- refer to http://logback.qos.ch/manual/appenders.html -->

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
            <encoding>UTF-8</encoding>
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.n52" level="DEBUG" />
	<logger name="org.n52.oxf" level="DEBUG" />
	<logger name="org.n52.server" level="DEBUG" />

	<logger name="org.geotools" level="WARN" />
	<logger name="org.apache" level="WARN" />

	<logger name="com.sun.xml" level="ERROR" />
	<logger name="org.geotools" level="WARN" />
	<logger name="org.springframework.web.servlet.mvc.method.annotation"
		level="WARN" />
	<logger name="org.jboss.logging" level="WARN" />

	<root level="INFO">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>